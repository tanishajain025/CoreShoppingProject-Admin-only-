@model CoreShoppingAdminPortal.Models.Product
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Edit</h2>
&nbsp;&nbsp;
<form asp-action="Edit" asp-controller="Product">
    <div class="form-group row">
        <input type="hidden" asp-for="ProductId" />
        <br />
        <label for="text" class="col-sm-2 col-form-label" asp-for="ProductName">Product Name </label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="ProductName" />
        </div>
        <br />
        <label for="text" class="col-sm-2 col-form-label" asp-for="ProductQty">Product Qty</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="ProductQty" />
        </div>

        <br />
        <label for="text" class="col-sm-2 col-form-label" asp-for="ProductPrice">Product Price</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="ProductPrice" />
        </div>

        <br />

        <label for="text" class="col-sm-2 col-form-label" asp-for="ProductImage">Product Image</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="ProductImage" />
        </div>

        <label for="text" class="col-sm-2 col-form-label" asp-for="ProductDescription">Product Description</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="ProductDescription" />
        </div>
        <br />
        <label for="text" class="col-sm-2 col-form-label" asp-for="ProductCategoryId">Product CategoryId</label>
        <div class="col-sm-10">
            <select class="form-control" asp-for="ProductCategoryId" asp-items="ViewBag.Categories"></select>
        </div>
        <br />
        <label for="text" class="col-sm-2 col-form-label" asp-for="VendorId">Vendor Id</label>
        <div class="col-sm-10">
            <select class="form-control" asp-for="VendorId" asp-items="ViewBag.Vendor"></select>
        </div>
        <br />
    </div>
    <center>
        <input type="submit" value="Edit" class="btn btn-success" />&nbsp;
        <button class="btn btn-success" asp-controller="Product" asp-action="Index">

            Back
        </button>
    </center>
</form>