@model IEnumerable<CoreShoppingAdminPortal.Models.Vendor>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .btn1{
        margin-right:3500px;
        margin-top:-10px;
    }
</style>

<img src="~/images/Vendor.jpg" height="300" width="1052">
&nbsp;&nbsp;
<br/>
<a asp-controller="Vendor" asp-action="Create"><button type="button" class="btn btn-info btn1">Create</button></a>
&nbsp;&nbsp;
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.VendorId)</th>
            <th>@Html.DisplayNameFor(model => model.VendorName)</th>


            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ordr in Model)
        {

            <tr>
                <td>@Html.DisplayFor(modelItem => ordr.VendorId)</td>
                <td>@Html.DisplayFor(modelItem => ordr.VendorName)</td>


                <td>
              <a asp-controller="Vendor" asp-action="Details" asp-route-id="@ordr.VendorId"><button type="button" class="btn btn-dark">Details</button></a>|
                    <a asp-controller="Vendor" asp-action="Edit"
                       asp-route-id="@ordr.VendorId"><button type="button" class="btn btn-info">Edit</button></a>|
                    <a asp-controller="Vendor" asp-action="Delete"
                       asp-route-id="@ordr.VendorId"><button type="button" class="btn btn-danger">Delete</button></a>
                </td>


            </tr>
        }
    </tbody>
</table>

