@model CoreShoppingAdminPortal.Models.Vendor
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Create Vendor</h2>
&nbsp; &nbsp;
<form asp-action="Create" asp-controller="Vendor">
    <div class="form-group row">

        <label for="text" class="col-sm-2 col-form-label" asp-for="VendorName">Vendor Name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" placeholder="Text" asp-for="VendorName">
        </div>
        <label for="text" class="col-sm-2 col-form-label" asp-for="EmailId">Email Id</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" placeholder="Email@example.com" asp-for="EmailId">
        </div>

        <label for="text" class="col-sm-2 col-form-label" asp-for="VendorDescription">Vendor Description</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" placeholder="Text"asp-for="VendorDescription">
        </div>

    </div>

    <center>
        <input type="submit" value="Submit" class="btn btn-success" />&nbsp;
        <button class="btn btn-success" asp-controller="Vendor" asp-action="Index">
           
        Back
        </button></center>


</form>



